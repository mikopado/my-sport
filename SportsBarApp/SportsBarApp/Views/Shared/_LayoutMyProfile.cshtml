<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="http://fonts.googleapis.com/css?family=Leckerli+One|Coustard:900" rel="stylesheet" type="text/css" />

    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body>
    @Html.Partial("_NavbarProfile")
    <div class="container">
        <section id="cover">
            <div id="profile-pic">
            @if (Model.GetType().GetProperty("FirstName") != null)
            {
                <text>@Model.FirstName  @Model.LastName </text>
            }
            else
            {
                <text>@ViewBag.FirstName  @ViewBag.LastName</text>
            }
            </div>
        </section>
        <hr />
        <div class="row">
            <section class="col-md-3 profile-links">
                @Html.ActionLink("Profile", "MyProfile", "Profile")
                @Html.ActionLink("Activity", "")
                @Html.ActionLink("Friends", "")
            </section>      

            <section class="col-md-9">
               
                @RenderBody()
            </section>
        </div>
    </div>
 
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/jqueryui")
@RenderSection("scripts", required: false)
@Scripts.Render("~/bundles/jqueryval")

    
</body>
</html>
