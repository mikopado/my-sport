<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="http://fonts.googleapis.com/css?family=Leckerli+One|Coustard:900" rel="stylesheet" type="text/css" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1" crossorigin="anonymous">

    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body>
    @Html.Partial("_NavbarProfile")
    <div class="container">
        <section id="cover">
            <div id="profile-pic">
            @if (@ViewBag.Domain == "profile")
            {
                <text>@Model.FirstName  @Model.LastName </text>
                
            }
            else if (@ViewBag.Domain == "image")
            {
                <text>@ViewBag.FirstName  @ViewBag.LastName</text>
            }
            else
            {
                <text>@Model.UserProfile.FirstName  @Model.UserProfile.LastName </text>
            }
            </div>
            
        </section>
        
        <div class="row">
            <section class="col-md-3 profile-links">
                @if (ViewBag.Domain == "profile" || ViewBag.Domain == "image")
                {
                    @Html.ActionLink("PROFILE", "MyProfile", "Profile", new { @class = "clicked" })
                    @Html.ActionLink("ACTIVITY", "Activity", "Profile", new { @class = "not-clicked" })
                    @Html.ActionLink("FRIENDS", "", "", new { @class = "not-clicked" })
                }
                else if (ViewBag.Domain == "post-profile")
                {
                    @Html.ActionLink("PROFILE", "MyProfile", "Profile", new { @class = "not-clicked" })
                    @Html.ActionLink("ACTIVITY", "Activity", "Profile", new { @class = "clicked" })
                    @Html.ActionLink("FRIENDS", "",  "", new { @class = "not-clicked" })
                }
            </section>      

            <section class="col-md-offset-1 col-md-8">
               
                @RenderBody()
            </section>
        </div>
    </div>
 
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/jqueryui")
@RenderSection("scripts", required: false)
@Scripts.Render("~/bundles/jqueryval")

    
</body>
</html>
