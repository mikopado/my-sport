@using SportsBarApp.Models
@model TeamViewModel
@{
    ViewBag.Title = "Select Favourite Team";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-8 col-md-offset-4">
        @using (Html.BeginForm("SelectFavouriteTeam", "Team", FormMethod.Post))
        {
            @Html.TextBoxFor(m => m.Team, new { @class = "form-control" })
            <input type="submit" value="Save Team" class="btn btn-info" />
            //@Html.ActionLink("Save Team", "DisplayArticles", routeValues: null, htmlAttributes: new { @class = "btn btn-info", type="submit"})
        }

    </div>
</div>

