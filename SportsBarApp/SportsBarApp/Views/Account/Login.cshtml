@using SportsBarApp.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log In";
   
}

<div class="row">
    <div class="col-xs-offset-2 col-xs-8">
        <h2 class="col-md-offset-5">@ViewBag.Title</h2>
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()                
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "col-md-offset-3 text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label" })
                    <div>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control col-md-offset-4" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "col-md-offset-4 text-danger" })
                    </div>
                </div>
                <div id="login-password" class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label" })
                    <div>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control col-md-offset-4" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "col-md-offset-4 text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-4">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-offset-4">
                        <input id="login-btn" type="submit" value="Log in" class="btn btn-info" />
                    </div>
                </div>
                <hr />
                <div class="text-center col-md-11">                    
                    @*//Enable this once you have account confirmation enabled for password reset functionality*@
                    <p>
                        @Html.ActionLink("Forgot your password?", "ForgotPassword", null, new { @class="utility-links"})
                    </p>
                </div>
            }
        </section>            
    </div>
    
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}