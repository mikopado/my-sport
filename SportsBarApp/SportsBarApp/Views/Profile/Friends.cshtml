@model SportsBarApp.Models.ViewModels.ProfileViewModel
@{
    Layout = "~/Views/Shared/_LayoutMyProfile.cshtml";
    var removeBtnVisible = "hidden";
    var guestView = "guest";
    
}

@if (Model.IsThisUser)
{
    removeBtnVisible = "";
    guestView = "";    
    <div id="friend-nav" class="col-md-6 profile-links">
        <a href="#friends" class="friends-links">FRIENDS</a>
        <a href="#pending-requests" class="friends-links">FRIENDSHIP REQUESTS</a>
        
    </div>

    <div id="pending-requests" class="friends-window requests">
        <ul>
            @foreach (var item in Model.PendingRequests)
            {
                <li><img class="img-friends thumbnail" src="@item.Profile.ProfilePic.FileName"/>@Html.ActionLink(item.Profile.FirstName + "  " + item.Profile.LastName, "MyProfile", "Profile", new { id = item.Profile.ProfileId }, new { @class = "links-to-friends" })<section><input type="button" id="@item.Id" class="accept-btn btn btn-info btn-requests" value="Accept" /> | <input type="button" id="@item.Id" class="ignore-btn btn btn-info btn-requests" value="Ignore" /></section></li>
            }
        </ul>
    </div>

}
else
{
       
    <div class="col-md-6 text-center for-guest">FRIENDS</div>
}

<div id="friends" class="friends-window friends-list @guestView">
    
    <ul>
        @foreach (var item in Model.Friends)
        {
            <li><img class="img-friends thumbnail" src="@item.ProfilePic.FileName"/>@Html.ActionLink(item.FirstName + "  " + item.LastName, "MyProfile", "Profile", new {id = item.ProfileId }, new {@class="links-to-friends" }) <input type="button" id="@item.ProfileId" class="btn btn-info btn-friends remove-btn @removeBtnVisible" value="Remove"/></li>
        }
    </ul>
</div>

@section scripts{
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script> 
    <script src="~/Scripts/friendConnection.js"></script>
<script src="~/Scripts/search.js"></script>
    <script type="text/javascript">
        $(function () {

                       

            $('.friends-links').click(function () {
                var self = $(this);                
                $('.friends-links').each(function (i, el) { 
                    $(el).toggleClass('not-clicked');
                    $(el).toggleClass('clicked');
                    var link = $(el).attr('href');
                    $(link).toggleClass('hidden');                    
                });
                    
              
            });

            $('.accept-btn').click(function () {           
                var id = $(this).attr('id');
                var self = $(this);
                $.ajax({
                    type: 'POST',
                    url: window.location.origin + '/Profile/AcceptFriendship/' + id,
                    success: function (response) {                        
                        self.parent().parent().remove();
                        var newCount = parseInt($('#count').text()) - 1;
                        $('#count').text(newCount);
                        if (newCount === 0) {
                            $('#count').addClass('hidden');
                        }
                    }
                });
            });

            $('.ignore-btn').click(function () {
                var id = $(this).attr('id');
                var self = $(this);
                $.ajax({
                    type: 'POST',
                    url: window.location.origin + '/Profile/IgnoreFriendshipRequest/' + id,
                    success: function (response) {
                        self.parent().parent().remove();
                        var newCount = parseInt($('#count').text()) - 1;
                        $('#count').text(newCount);
                        if (newCount === 0) {
                            $('#count').addClass('hidden');
                        }
                    }
                });
            });

            $('.remove-btn').click(function () {
                var id = $(this).attr('id');               
                var self = $(this);
                $.ajax({
                    type: 'POST',
                    url: window.location.origin + '/Profile/RemoveFriendship/' + id,
                    success: function (response) {
                        self.parent().remove();                        
                    }
                });
            });

        })
    </script>
}








